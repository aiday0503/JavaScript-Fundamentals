      <script>

    console.log("Part I");
function starString(num){
  star = '*';
  console.log(star.repeat(num));
}
starString(8);


console.log('Part II');
function drawStars(arr){
  star = '*';
  for(var i=0; i<arr.length; i++){
    console.log(star.repeat(arr[i]));
  }
}

let x = [4, 6, 1, 3, 5, 7, 25];
drawStars(x);



console.log('Part III');
function drawStarsString(arr){
  star = '*';
  for(var i=0; i<arr.length; i++){
      if(typeof arr[i] === 'string'){
        let x = '';
        x = arr[i].charAt(0);
        let lowercase = x.toLowerCase();
        let lengthOf = arr[i].length;
        console.log(lowercase.repeat(lengthOf));
      }else{
    console.log(star.repeat(arr[i]));
      }
  }
}

let y = [4, "Tom", 1, "Michael", 5, 7, "Jimmy Smith"];
drawStarsString(y);





